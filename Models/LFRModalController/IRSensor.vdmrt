class IRSensor

instance variables 

port : RealPort;
failed : BoolPort

operations

-- constructor for IRSensor
public IRSensor: RealPort * BoolPort ==> IRSensor
IRSensor(p,f) == (
	port := p;
	failed := f
);

public getReading: () ==> real
getReading() == (
	return port.getValue()
);

public hasFailed: () ==> bool
hasFailed() == (
	failed.getValue()
)

end IRSensor